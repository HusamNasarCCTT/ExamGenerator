<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_exam_details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="2">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill"
            card_view:cardUseCompatPadding="true"
            android:layout_columnSpan="2"
            android:layout_rowSpan="1"
            android:layout_rowWeight="1"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardCornerRadius="4dp"
            card_view:cardPreventCornerOverlap="true">

            <com.jjoe64.graphview.GraphView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/graph" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="180dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_gravity="fill"
            card_view:cardUseCompatPadding="true"
            android:layout_columnWeight="3"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            card_view:cardCornerRadius="4dp"
            card_view:cardPreventCornerOverlap="true"
            card_view:contentPaddingBottom="10dp"
            android:layout_width="wrap_content">

            <TextView
                android:id="@+id/viewExamNoOfQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="96"
                android:textSize="72dp"
                android:layout_gravity="center"
                android:textAppearance="?android:textAppearanceLarge"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questions"
                android:layout_gravity="center|bottom"
                android:textAppearance="?android:textAppearanceLarge"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowSpan="1"
            android:layout_gravity="fill"
            >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                card_view:cardUseCompatPadding="true"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                card_view:contentPaddingBottom="10dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardPreventCornerOverlap="true">

                <TextView
                    android:id="@+id/viewExamNoOfEssays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="24dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Essays"
                    android:layout_gravity="center|bottom"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_column="0"
                android:layout_row="0"
                card_view:cardUseCompatPadding="true"
                card_view:contentPaddingBottom="10dp"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                card_view:cardCornerRadius="4dp"
                card_view:cardPreventCornerOverlap="true">

                <TextView
                    android:id="@+id/viewExamNoOfMCQs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23"
                    android:textSize="24dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MCQs"
                    android:layout_gravity="center|bottom"/>

            </android.support.v7.widget.CardView>



        </LinearLayout>

        <GridLayout
            android:layout_column="0"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_columnSpan="2"
            android:layout_gravity="fill"
            android:columnCount="2"
            android:rowCount="2"
            >

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="0"
                android:layout_row="0"
                card_view:cardUseCompatPadding="true"
                card_view:contentPaddingBottom="10dp"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                card_view:cardCornerRadius="4dp"
                card_view:cardPreventCornerOverlap="true">

                <TextView
                    android:id="@+id/theoryPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="36dp"
                    android:text="30%"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theory"
                    android:layout_gravity="center|bottom"
                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="1"
                android:layout_row="0"
                card_view:cardUseCompatPadding="true"
                card_view:contentPaddingBottom="10dp"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                card_view:cardCornerRadius="4dp"
                card_view:cardPreventCornerOverlap="true">


                <TextView
                    android:id="@+id/practicalPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70%"
                    android:textSize="36dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Practical"
                    android:layout_gravity="center|bottom"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="0"
                android:layout_row="1"
                card_view:cardUseCompatPadding="true"
                card_view:contentPaddingBottom="10dp"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                card_view:cardCornerRadius="4dp"
                card_view:cardPreventCornerOverlap="true">

                <TextView
                    android:id="@+id/viewExamTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="107.0"
                    android:textSize="32dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="mins"
                    android:layout_gravity="center|bottom"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/viewExamDifficultyCard"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_columnSpan="1"
                android:layout_column="1"
                android:layout_row="1"
                card_view:cardUseCompatPadding="true"
                card_view:contentPaddingBottom="10dp"
                card_view:cardElevation="@dimen/cardview_default_elevation"
                card_view:cardCornerRadius="4dp"
                card_view:cardPreventCornerOverlap="true">

                <Button
                    android:id="@+id/viewExamDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Moderate"
                    android:background="?selectableItemBackground"
                    style="@style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem"
                    android:layout_gravity="center"
                    android:textSize="24dp"/>
            </android.support.v7.widget.CardView>

        </GridLayout>

    </GridLayout>
</ScrollView>